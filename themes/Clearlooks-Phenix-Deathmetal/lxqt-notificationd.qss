Notification {
    color: #1a1a1a;
    background: #d9d9d9;
    border: 1px solid #979797;
    border-radius: 2px;
}

QLabel {
    color: #1a1a1a;
}

#appLabel {
    font-weight: bold;
}

#closeButton {
    color: #1a1a1a;
    background: none;
    border: 4px solid transparent;
    border-image: none;
    margin: 2px;
    padding: 2px;
}

#closeButton:hover {
    border-image: url(assets/buttons/button.png);
}

#closeButton:pressed {
    border-image: url(assets/buttons/active.png);
}
